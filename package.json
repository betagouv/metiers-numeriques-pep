{
  "name": "metiers-numeriques-pep",
  "description": "Scrapper API for place-emploi-public.gouv.fr.",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "scripts": {
    "prebuild": "sh ./scripts/build/prebuild.sh",
    "build": "rm -Rf ./build && tsc -p ./tsconfig.build.json --noEmit false",
    "db:migrate": "prisma migrate deploy",
    "dev": "nodemon -e js,sql,ts --exec \"yarn build && yarn start\" --watch ./prisma/migrations --watch ./src",
    "dev:docker": "docker-compose down && docker-compose -f ./docker-compose.yml -f ./docker-compose.dev.yml up -d cache db",
    "dev:migrate": "prisma migrate dev",
    "dev:server": "nodemon -e js,sql,ts --exec \"yarn build && yarn start:server\" -r dotenv/config --watch ./prisma/migrations --watch ./src",
    "dev:worker": "nodemon -e js,sql,ts --exec \"yarn build && yarn start:worker\" -r dotenv/config --watch ./prisma/migrations --watch ./src",
    "prepare": "husky install",
    "run:process": "node --experimental-specifier-resolution=node build/jobs/processNewPepOffer.js",
    "start": "concurrently \"yarn start:cron\" \"yarn start:server\" \"yarn start:worker\"",
    "start:cron": "node --experimental-specifier-resolution=node -r dotenv/config ./build/cron.js",
    "start:server": "node --experimental-specifier-resolution=node -r dotenv/config ./build/server.js",
    "start:worker": "node --experimental-specifier-resolution=node --expose-gc -r dotenv/config ./build/worker.js",
    "test": "yarn test:lint && yarn test:build && yarn test:unit",
    "test:lint": "eslint --ext js,mjs,ts,tsx .",
    "test:type": "tsc",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=./config/jest.config.js --detectOpenHandles",
    "test:unit:watch": "yarn test:unit --watch"
  },
  "dependencies": {
    "@koa/router": "10.1.1",
    "@prisma/client": "4.0.0",
    "bhala": "3.0.4",
    "bull": "4.8.2",
    "cron": "1.8.2",
    "dayjs": "1.11.1",
    "dotenv": "16.0.0",
    "got": "12.0.4",
    "jsdom": "19.0.0",
    "koa": "2.13.4",
    "numeral": "2.0.6",
    "sanitize-html": "2.7.0",
    "turndown": "7.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.0.0",
    "@ivangabriele/commitlint-config": "1.0.5",
    "@ivangabriele/eslint-config-typescript-base": "4.1.0",
    "@ivangabriele/prettier-config": "3.0.2",
    "@ivangabriele/tsconfig-node": "1.2.2",
    "@jest/globals": "28.0.2",
    "@types/bull": "3.15.8",
    "@types/cron": "1.7.3",
    "@types/jest": "27.4.1",
    "@types/jsdom": "16.2.14",
    "@types/koa": "2.13.4",
    "@types/koa__router": "8.0.11",
    "@types/node": "17.0.29",
    "@types/numeral": "2.0.2",
    "@types/sanitize-html": "2.6.2",
    "@types/turndown": "5.0.1",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.18.0",
    "codecov": "3.8.3",
    "concurrently": "7.1.0",
    "eslint": "8.0.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.5",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "nodemon": "2.0.15",
    "prettier": "2.8.0",
    "prisma": "4.0.0",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  },
  "prettier": "@ivangabriele/prettier-config"
}
